<div class="col mb-4">
  <a href="{{ project.url | relative_url }}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if project.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=project.img sizes="(min-width: 768px) 156px, 50vw" alt="project thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if project.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ project.title }}</h3>
            {% if project.cv_pdf %}
              <a
                {% if project.cv_pdf contains '://' %}
                  href="{{ project.cv_pdf }}"
                {% else %}
                  href="{{ project.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
                {% endif %}
                target="_blank"
                rel="noopener noreferrer"
                class="float-right"
                style="position: absolute; top: 10px; right: 10px;"
              >
                <i class="fa-solid fa-file-pdf"></i>
              </a>
            {% endif %}
            <p class="card-text">{{ project.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if project.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if project.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ project.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
